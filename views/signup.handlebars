  <header class="hero bg-primary navbar sticky-top">
    <h1>
      Sign Up!
    </h1>
    <!-- Only display the logout button if the user is logged in -->
    {{#if logged_in}}
    <nav>
      <button class="btn btn-outline-dark" id="logout">logout</button>
    </nav>
    {{/if}}
  </header>
<section class="vh-50">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; background-color:rgba(204, 204, 204, 0.685);">
          <div class="div-center">
            <div class="d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form class="signup-form">

                  <div class="div-center">
                    <h2>User Registration Form</h2>
                    {{!-- <img width="400" height="200" class="img-responsive" src="https://giffiles.alphacoders.com/649/6490.gif" alt="Gif ID: 6490" title="Anime Dragon Ball Z Gif"> --}}
                    <img class="photo" src="https://64.media.tumblr.com/4b33218bc4151882d5bd0e14cb3b331f/tumblr_o9nluvpJtS1tkb22po1_500.gifv" alt="">
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Complete the form to get in the fight!</h5>

                  <div class="form-outline mb-4">
                    <input type="form" id="name-signup" class="form-control form-control-md" />
                    <label class="form-label" for="name-signup">Name</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="form" id="tag-signup" class="form-control form-control-md" />
                    <label class="form-label" for="tag-signup">Gamertag</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="email" id="email-signup" class="form-control form-control-md" />
                    <label class="form-label" for="email-signup">Email</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="form" id="donate-signup" class="form-control form-control-md" />
                    <label class="form-label" for="donate-signup">Donation Link</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="form" id="matcherino-signup" class="form-control form-control-md" />
                    <label class="form-label" for="matcherino-signup">Matcherino Link</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="form" id="sponsor-signup" class="form-control form-control-md" />
                    <label class="form-label" for="sponsor-signup">Sponsor Link</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="form" id="contactInfo-signup" class="form-control form-control-md" />
                    <label class="form-label" for="contactInfo-signup">Additional Contact Info</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="password-signup" class="form-control form-control-md" />
                    <label class="form-label" for="password-signup">Password</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg" type="submit">Register</button>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Already have an account? <a href="/login"
                      style="color: #393f81;">Login here</a></p>
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/js/signup.js"></script>
